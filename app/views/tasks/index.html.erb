<div class="container mt-4 text-center">
  <h1>Tasks</h1>
  <div class="card d-flex">
    <ul class="list-group list-group-flush">
      <% @tasks.each do |task| %>
        <li class="list-group-item">
          <% if task.completed %>
           <i class="fa-regular fa-square-check"></i>
          <% else %>
           <i class="fa-regular fa-square-uncheck"></i>
          <% end %>
          <%= link_to "#{task.title}", task_path(task), class: "text-black text-center"%>
          <%= link_to task_path(task), data: { turbo_method: 'delete' }, class: 'btn btn-light' do %>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= link_to "Create a task", new_task_path, class: "btn btn-primary text-decoration-none mt-4" %>
</div>

