<div class="container mt-4 gap-3">
  <h1 class="">Add a task</h1>
  <%= form_for @task do |f| %>
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control"  %>
    <%= f.label :details, class: "form-label" %>
    <%= f.text_field :details, class: "form-control" %>
    <%= f.submit class: "mt-3" %>
  <% end %>

  <%= link_to "back to tasks", tasks_path, class: "btn btn-primary text-decoration-none mt-4" %>
</div>
